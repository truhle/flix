<header class="content-header">
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
  <fieldset>
    <ol>
      <li class="required">
        <%= label_tag :username_or_email %>
        <%= text_field_tag :username_or_email, nil, autofocus:true, size: 40, required: true %>
      </li>
      <li class="required">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, size: 40, required: true %>
      </li>
    </ol>
    <p>
      <%= submit_tag "Sign In" %>
    </p>
    <p>
      No account yet? <%= link_to "Sign Up", new_user_path, class: 'button' %>
    </p>
  </fieldset>
<% end %>
